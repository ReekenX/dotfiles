set ignore-space = yes
set ignore-case = yes
set show-changes = yes
set diff-context = 10

bind main u !git pull
bind main U !git pull
bind main p !git push
bind main P !git push

bind status p !git add --patch %(file)
bind status P !git add --patch %(file)
bind status c !git commit
bind status C !git commit
bind status A !git add -N %(file)
bind status a !git add -N %(file)

bind diff p !git add --patch %(file)
bind diff P !git add --patch %(file)
bind diff c !git cz
bind diff C !git cz
