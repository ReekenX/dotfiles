# Quick folder jumps
alias '..'='cd ..'
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

# Common pipiline actions
alias -g G='| grep -i'
alias -g L='| less'
alias -g C='| wc -l'
alias -g S='| sort'
alias -g U='| sort | uniq'
alias -g TOP='| sort | uniq -c | sort -rn'

# When you are too tired to recognize shell from VIM
alias :e="nvim"
alias :q="exit"

# Edit with nvim instead of vim
alias vim="nvim"
alias vi="nvim"

# Enable verbose mode for common commands
alias ls='ls -FlhG'
alias rm="/bin/rm -rvf"
alias mv="/bin/mv -v"
alias cp="/bin/cp -Rv"
alias scp="/usr/bin/scp -r"
alias rsync="/usr/bin/rsync -Pa"
alias tig="/usr/local/bin/tig status"
alias skill="kill -s SIGKILL"
alias htop="/usr/local/bin/htop -u $USER"

# Git time savers
alias ga="git add . -N"
alias gaa="git add ."
alias gap="clear && git add -p"
alias gb="git branch -a"
alias gbl="git branch"
alias gbs="git checkout \$(git branch | cut -c 3- | fzy); git pull -q; gc"
alias gf='PATH=$PATH:~/.gitconfig.d/bin/icdiff git icdiff'
alias gfc='PATH=$PATH:~/.gitconfig.d/bin/icdiff git icdiff --cached'
alias gp="git push || (git pull && git push)"
alias gr="git reset HEAD~1"
alias gc="git branch --merged | egrep -v '(^\*|master|develop)' | xargs git branch -d"
alias gs="git status --ignore-submodules -sb"
alias gco="git checkout -f"
alias gi="git commit -m"
alias gl="git log --graph --topo-order --abbrev-commit --date=short --decorate --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset%C(yellow)%d%Creset %s %Cblue[%cn]%Creset' "
alias gln="git log --name-only"
alias glc="git rev-parse --short HEAD"
alias gw="gl master..HEAD"
alias gww="gf master..HEAD"
alias gt="~/bin/git-track"

alias rg="rg -i -g '!*node_modules*'"
alias ii="yarn install"
alias uu="yarn upgrade-interactive"
alias go='cd "$(find ~ -maxdepth 3 -type d -not -path '"'"'*/\.*'"'"' -not -path '"'"'*/media/*'"'"' -not -path '"'"'*/assets/*'"'"' -not -path '"'"'*/static/*'"'"' -not -path '"'"'*/Library/*'"'"' | fzy)"'
alias ts="tmuxinator start"
alias bi="bundle install"
alias bu="bundle update"
alias rc="rails console"
alias ii="yarn install"

# Useful alert for tmux to notify about some finished command in other window/pane
alias bell="echo -e '\a'"

# Quick search function which ignores node_modules folder and gives search results in colored `less`
function s() {
  rg -p -g '!node_modules' -C 5 $@ | less -R
}

# Commit with ticket number from the branch name
function gt() {
  branch_name=$(git rev-parse --abbrev-ref HEAD | grep -o '[a-zA-Z]\{1,\}-[0-9]\{2,\}')
  gi "$branch_name: $@"
}
